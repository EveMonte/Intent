<?xml version="1.0" encoding="utf-8"?>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!--When Button is not enabled -->
        <item android:state_enabled="false" android:color="#c0dbf6" />
        <!--When Button is in pressed state -->
        <item android:state_pressed="true" android:color="#79afe7" />
        <!--When Button is in selected state -->
        <item android:state_selected="true" android:color="#558fdd" />
        <!--Default Background Color -->
        <item android:color="#4870bc" />

    </selector>